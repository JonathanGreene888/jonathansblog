<h1> Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do  |msg| %> <%# this is how you display messages%>
        <div class= "alert alter-danger"> <%=msg%> </div>
        <%end%>
    <%end%>
    <p>
        <%= f.label :title %> <br>
        <%= f.text_field( :title, {:class => 'form-control'}) %> <%#this is how you add classes to a field%>
    </p>

    <p>
        <%= f.label :body %> <br>
        <%= f.text_area( :body,{:class => 'form-control'}) %>
    </p>
    
    <p>
        <%= f.submit({:class => 'btn, btn-primary'}) %>
    </p>
    <% end %>
